media_queries = {
  mobile  : "only screen and (max-width: 720px)",
  tablet  : "only screen and (min-width: 721px) and (max-width: 1024px)",
  desktop : "only screen and (min-width: 1025px)"
}

for_breakpoint(breakpoints)
  conditions = ()
  for breakpoint in breakpoints
    push(conditions, media_queries[breakpoint])
  conditions = join(", ", conditions)
  @media conditions
    {block}

.header
    // padding-left: 1em
    display: flex
    justify-content: space-between
    align-items: center
    border-bottom: 1px solid gray
    // background-color: pink

    &__logo
        font-family Lato
        font-size: 12px
        padding: 0 2em
        // background-color: gray
        & h1 span
            color:#F25260 

    &__navigation
        // background-color: blue
        font-family: Oswald
        font-size: 16px
        display: flex
        letter-spacing: 4px
        justify-content: center
        
        & a
            color: gray
            font-weight: 600
            padding: 1em
